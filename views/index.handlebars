<div class="container">
    <div class="row">
        <h1>Burgers!</h1>
    </div>
<div class ="row">
    <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
            <label for="burgName">Burger Name:</label>
            <input type="text" id="burgName" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
        </form>
</div>
<div class="row">
    <div class="col-sm-6" id="notdevoured">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour It!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
    </div>   
    <div class="col-sm-6" id="devoured">
<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>
    </div>  
</div>

</div> <!--end container -->